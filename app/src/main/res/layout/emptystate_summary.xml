<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/emptyimage"
        android:layout_width="@dimen/emptyimage"
        android:layout_height="@dimen/emptyimage"
        android:layout_centerHorizontal="true"
        android:src="@drawable/moneybag"
        android:layout_marginTop="@dimen/emptymargintop"
        android:alpha="70"/>

    <TextView
        android:id="@+id/textempty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emptyimage"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:text="You don't have any money"
        android:textSize="@dimen/headtextsize"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/detailtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textempty"
        android:layout_centerHorizontal="true"
        android:text="Please add income or expense"
        android:textSize="@dimen/textsize" />

</RelativeLayout>