<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/expense_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp" />

        <RelativeLayout
            android:id="@+id/expense_formdetail"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/expense_image"
            android:gravity="left">


            <TextView
                android:id="@+id/expense_namelist"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="Head"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/expense_date"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/expense_namelist"
                android:layout_marginTop="5dp"
                android:text="date"
                android:textSize="16dp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:gravity="right">


            <TextView
                android:id="@+id/expense_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="0.00"
                android:textColor="@color/expense"
                android:textSize="@dimen/textsize" />

            <TextView
                android:id="@+id/expense_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/baht"
                android:textSize="18dp" />


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>